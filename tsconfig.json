{
  "compilerOptions": {
    "target": "es2017",
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "declaration": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "esnext"]
  },
  "include": ["packages", "src"],
  "exclude": ["node_modules", "lib", "es", "test"]
}
